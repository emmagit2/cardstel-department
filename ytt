<!-- ✅ JS Logic -->
<script>
  // Example staff data (replace with API later)
  const staffData = [
    { id: 1, name: "John Doe", email: "john@example.com", role: "Manager", department: "IT", joined: "2025-01-10", profile: "https://via.placeholder.com/40" },
    { id: 2, name: "Mary Jane", email: "mary@example.com", role: "HR", department: "HR", joined: "2025-02-15", profile: "https://via.placeholder.com/40" }
  ];

  function loadStaff() {
    const tbody = document.getElementById("staffTableBody");
    tbody.innerHTML = "";
    staffData.forEach((s, i) => {
      tbody.innerHTML += `
        <tr id="row-${s.id}">
          <td>${i+1}</td>
          <td><img src="${s.profile}" class="rounded-circle" width="40" height="40"></td>
          <td>${s.name}</td>
          <td>${s.email}</td>
          <td>${s.role}</td>
          <td>${s.department}</td>
          <td>${s.joined}</td>
          <td class="text-center">
            <div class="btn-group">
              <button class="btn btn-sm btn-warning" onclick="openEdit(${s.id})"><i class="fas fa-edit"></i></button>
              <button class="btn btn-sm btn-danger" onclick="openDelete(${s.id})"><i class="fas fa-trash"></i></button>
              <button class="btn btn-sm btn-success"><i class="fas fa-building"></i></button>
              <button class="btn btn-sm btn-secondary"><i class="fas fa-times-circle"></i></button>
              <button class="btn btn-sm btn-info"><i class="fas fa-file-alt"></i></button>
            </div>
          </td>
        </tr>
      `;
    });
  }

  // Open edit modal
  function openEdit(id) {
    const staff = staffData.find(s => s.id === id);
    document.getElementById("editStaffId").value = staff.id;
    document.getElementById("editStaffName").value = staff.name;
    document.getElementById("editStaffRole").value = staff.role;
    new bootstrap.Modal(document.getElementById("editStaffModal")).show();
  }

  // Open delete modal
  function openDelete(id) {
    document.getElementById("deleteStaffId").value = id;
    new bootstrap.Modal(document.getElementById("deleteStaffModal")).show();
  }

  // Confirm delete
  document.getElementById("confirmDeleteStaff").addEventListener("click", () => {
    const id = parseInt(document.getElementById("deleteStaffId").value);
    const index = staffData.findIndex(s => s.id === id);
    if (index > -1) staffData.splice(index, 1);
    loadStaff();
    bootstrap.Modal.getInstance(document.getElementById("deleteStaffModal")).hide();
  });

  // Initial load
  loadStaff();
</script>
